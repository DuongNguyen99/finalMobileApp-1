<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inbox_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/inbox_row_styling"
   >

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/inbox_row_info_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_name_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_account_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/date_time"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Date"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="13sp"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/inbox_topic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="10dp"

           />

        <TextView
            android:id="@+id/inbox_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:textSize="15sp"
            />

    </LinearLayout>


</LinearLayout>